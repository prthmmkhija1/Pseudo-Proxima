# Environment Variable Template for Proxima
# Copy this file to .env and fill in your values

# General Configuration
PROXIMA_VERBOSITY=info
PROXIMA_OUTPUT_FORMAT=text
PROXIMA_COLOR_ENABLED=true

# Backend Configuration
PROXIMA_DEFAULT_BACKEND=auto
PROXIMA_PARALLEL_EXECUTION=false
PROXIMA_TIMEOUT_SECONDS=300

# LLM Configuration
PROXIMA_LLM_PROVIDER=none
PROXIMA_LLM_MODEL=
PROXIMA_LLM_LOCAL_ENDPOINT=
PROXIMA_LLM_REQUIRE_CONSENT=true

# API Keys (if using remote LLMs)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Resource Configuration
PROXIMA_MEMORY_WARN_THRESHOLD_MB=4096
PROXIMA_MEMORY_CRITICAL_THRESHOLD_MB=8192
PROXIMA_MAX_EXECUTION_TIME_SECONDS=3600

# Consent Configuration
PROXIMA_AUTO_APPROVE_LOCAL_LLM=false
PROXIMA_AUTO_APPROVE_REMOTE_LLM=false
PROXIMA_REMEMBER_DECISIONS=false
